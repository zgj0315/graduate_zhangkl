<page-meta root-font-size="system" />
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
  <view class="weui-article">
    <view aria-role="heading" aria-level="4" class="weui-article__h1">{{question}}</view>
    <view class="weui-article__section" wx:if="{{answer.length}}">
      <view class="weui-article__p">{{answer}}</view>
    </view>
    <view class="weui-article__section" wx:else>
      <view class="weui-article__p">专家未答复，请耐心等待</view>
    </view>
  </view>
</view>